    <link rel="stylesheet" href="/stylesheets/Beemazon/productDetails.css">
 </head>

<body>
    <%- include('../../includes/navigation.ejs') %>
    <main class="container">
        <h1 class="card__header"><%= product.title %></h1>        
        <h2 id="price">$<%= product.price.toFixed(2) %></h2>
        <div class="card__image">
            <img <%- include('../../includes/imageSource.ejs', {imageUrl: product.imageUrl}) %> alt="<%= product.title %>">
        </div>        
        <p class="card__description"><%= product.description %></p>
        <% if(product.options.title !== "" && product.options.list.length > 0) { %>
            <div class="options">
                <label for="options"><%= product.options.title %></label>
                <select name="options" id="options">
                    <% product.options.list.forEach(o => { %>
                    <option><%= o %></option>
                    <% }) %>                                        
                </select>
            </div>
        <% } %>        
        <div class="card__actions">
            <%- include('../../includes/add-to-cart.ejs') %>
        </div>
    </main>
    <%- include('../../includes/end.ejs') %>