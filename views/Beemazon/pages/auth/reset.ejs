<%- include('../../includes/head.ejs') %>    
  <link rel="stylesheet" href="/stylesheets/Beemazon/auth.css">
</head>

<body>
   <%- include('../../includes/navigation.ejs') %>

    <main class="container">
      <h1><%= pageTitle %></h1>
      <p>Submit your account's email and you will be sent a link to reset your password.</p>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="grid" action="/beemazon/auth/reset" method="POST">          
            <label for="email">E-Mail</label>
            <input type="email" name="email" id="email">            
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn gapped full-span" type="submit">Reset Password</button>          
        </form>
        <a class="gapped" href="/beemazon/auth/signup">New to Beemazon?</a>
    </main>
<%- include('../../includes/end.ejs') %>